<!-- Agregar -->
                <li>
                <button type="button" class="boton-menu boton-categoria" data-bs-toggle="modal" data-bs-target="#agregarModal">Agregar</button>
                    <!-- The Modal -->
                <form action="/crud_productos/agregar" method="POST">
                <div class="modal" id="agregarModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Agregar producto</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
        
                        <!-- Modal body -->
                        <div class="modal-body">
                                <label>Nombre</label>
                                <input type="text" name="producto">
                                <label>Proveedor</label>
                                <input type="text" name="proveedor">
                                <label>Stock</label>
                                <input type="number" name="stock">
                                <label>Precio</label>
                                <input type="number" name="precio">
                        </div>
        
                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <input type="submit" value="OK" />
                            <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                        </div>
                </li>
                </form>
<!-- Modificar -->
        <li>
            <button id="modificarBtn" class="boton-menu boton-categoria" data-bs-toggle="modal" data-bs-target="#modificarModal">Modificar</button>
                    <!-- The Modal -->
            <form action="/modificar" method="">
                <div class="modal" id="modificarModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Modificar producto</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
        
                        <!-- Modal body -->
                        <div class="modal-body">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Proveedor</th>
                                        <th>Id</th>
                                        <th>Precio</th>
                                        <th>Stock</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for (var i = 0; i < Productos.length; i++) { %>
                                    <tr>
                                            <td><%= Productos[i].id %>"</td>
                                            <td><%= Productos[i].producto %></td>
                                            <td><%= Productos[i].proveedor %>></td>
                                            <td><%= Productos[i].precio %></td>
                                            <td><%= Productos[i].stock %></td>
                                            <td>          
                                                <button>Modificar</button>
                                            </td>
                                            <% } %>

                                    </tr>
                                    </tbody>
                                </table>
                        </div>        
                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <input type="submit" data-bs-dismiss="modal"></button>
                            <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                    </div>
                </form>
                </li>

